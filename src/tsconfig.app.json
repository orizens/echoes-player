{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "baseUrl": "./",
    "paths": {
      "~/*": ["/*"],
      "@utils/*": ["app/shared/utils/*"],
      "@shared/*": ["app/shared/*"],
      "@animations/*": ["app/shared/animations/*"],
      "@core/*": ["app/core/*"],
      "@api/*": ["app/core/api/*"],
      "@resolvers/*": ["app/core/resolvers/*"],
      "@store/*": ["app/core/store/*"],
      "@mocks/*": ["../tests/mocks/*"],
      "@env/*": ["environments/*"]
    },
    "types": [
      "gapi",
      "gapi.youtube",
      "gapi.auth2",
      "youtube",
      "jasmine",
      "node"
    ]
  },
  "exclude": ["test.ts", "**/*.spec.ts"],
  "angularCompilerOptions": {}
}
